@model IEnumerable<ShapeShift.Models.AppUser>


<table id ="11" class="table" data-url='@Url.Action("Edit","AppUsers")'>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.middleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.middleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Employee", new { id = item.UserId }) |
                @Html.ActionLink("Delete", "Delete", "Employee", new { id = item.UserId })
                <button id="EditEmployee" data-url='@Url.Action("Edit","Shift")'> Edit Employee</button> //Link to edit Employee on Employee Controller returns partial view Current Employee, link to delete employee popps on partial
                <button id="DeleteEmployee" data-url='@Url.Action("Delete","Employee)'> Delete Employee</button> //Link to delete EMployee on Employee Controller returns partial view Current Employee

            </td>
        </tr>
    }

</table>



<script>
     $('#EditEmployee').click(function () {
        evt.preventDefault();
        evt.stopPropagation();
        $('#EditShiftField').show();
        var $detailDiv = $('#EditShiftEmpty'),
            url = $(this).data('url');

        $.get(url, function (data) {
            $detailDiv.replaceWith(data);
        });

     });

      $('#DeleteEmployee').click(function () {
        evt.preventDefault();
        evt.stopPropagation();
        $('#EditShiftField').show();
        var $detailDiv = $('#EditShiftEmpty'),
            url = $(this).data('url');

        $.get(url, function (data) {
            $detailDiv.replaceWith(data);
        });

    });

</script>
