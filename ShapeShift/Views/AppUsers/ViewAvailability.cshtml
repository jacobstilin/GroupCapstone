@model IList<ShapeShift.Models.Availability>

@{
    ViewBag.Title = "ViewAvailability";
}

<h2>EditAvailability</h2>



    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Availability</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <table class="table">
            <tr>
                <th>
                    <h4>Week Day</h4>
                </th>
                <th>
                    <h4>Start Time</h4>
                </th>
                <th>
                    <h4>End Time</h4>
                </th>
                <th></th>
            </tr>

            @for (var i = 0; i < Model.Count(); i++)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model[i].weekday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].end)
            </td>

        </tr>
            }

        </table>

      </div>


<div>
    @Html.ActionLink("Back to List", "ViewAllEmployees", "AppUsers")
</div>
