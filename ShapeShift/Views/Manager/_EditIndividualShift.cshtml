            </div>
        </div>

        <div class="col-md-3">
            @Html.Label("Locations", new { @class = "col-md-2 control-label" })
            @*@Html.DropDownList("Name")*@
            @Html.DropDownList("locationName", (IEnumerable
                <SelectListItem>)ViewBag.Name1)

        </div>

        @Html.Label("Positions", new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            @*@Html.DropDownList("Name")*@
