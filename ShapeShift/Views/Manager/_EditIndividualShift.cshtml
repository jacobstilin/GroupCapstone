@model ShapeShift.Models.Shift



    @using (Html.BeginForm("EditShift", "AppUsers", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div id="EditShiftEmpty" class="form-horizontal">
        <h4>Shift</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ShiftId)
        @Html.HiddenFor(model => model.status)
        @Html.HiddenFor(model => model.LocationId)


        <div class="form-group">
            @Html.LabelFor(model => model.ShiftId, htmlAttributes: new { @class = "control-label col-md-2" })
