@model ShapeShift.Models.Location
@{
    ViewBag.Title = "Create";

}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
}
<div class="form-horizontal">
    <h4>Position</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div id="buttonPos" class="col-md-10">
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>




    <div id="display">


    </div>

    @*//put model or Inumerable inside*@
    <div hidden style="width:100%;" id="modelWindow">
        <pre></pre>
        <div>


        </div>
    </div>
    @*//put model or inumerable inside*@

    <div>
        @Html.ActionLink("Done", "Index", "Home")
    </div>
    @Html.Label("Current Employees", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @*@Html.DropDownList("Name")*@
        @Html.DropDownList("AppUser", (SelectList)ViewBag.Name, "Select")


    </div>
</div>





<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

    //on load the document adds all of the position titles
    $(document).ready(function () {
           var positionList = $("#modelWindow").html(); //content of div must be iterable

        //replace with map function passing positionlist through
    $('#display').append('<table>' + '<tr>' + '<td>' + positionList[0].title
        + '</td>' + '</tr>' + '</table>');

       $('#display').append('<table>' + '<tr>' + '<td>' + "position2"
           + '</td>' + '</tr>' + '</table>');
       $('#display').append('<table>' + '<tr>' + '<td>' + "position3"
        + '</td>' + '</tr>' + '</table>');


    //when the create button is pressed and it is not null it adds the value of that to the table and performs ajax load function automatically
    $("#createButton").click(
        function () {

            if (!null) {
                var pos = "buttonPos".toString;//takes position typed in
               $('#display').append('<table>' + '<tr>' + '<td>' + pos + '</td>' + '</tr>' + '</table>');
               var content = $("#modelWindow").html();
                $('#display').load(content); // reloads content onto page

            }

        }

    )


    console.log("testing");

});
</script>








