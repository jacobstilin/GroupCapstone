                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.Label("Positions", new { @class = "col-md-2 control-label" })
                <div class="col-md-3">
                    @*@Html.DropDownList("Name")*@
                    @Html.DropDownList("title", (IEnumerable
                           <SelectListItem>)ViewBag.Name2)
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <li><a href="javascript:document.getElementById('EditIndividualPositionForm').submit()">Save</a></li>

